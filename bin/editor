#!/usr/bin/env zsh
# vim: set fdm=marker:

# Allow for custom editor override
if [[ -v CUSTOM_EDITOR ]]; then
        eval $CUSTOM_EDITOR '$@'
        exit $?
fi

# check if lvim is aviailable, if yes export EDITOR as lvim, else export EDITOR as vim
if command -v vim &> /dev/null
then
    export EDITOR="vim"
else
    export EDITOR="nano"
fi


eval $EDITOR '$@'
