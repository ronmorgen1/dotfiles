{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "catppuccin.accentColor": "lavender",
  "editor.accessibilitySupport": "off",
  "editor.comments.ignoreEmptyLines": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line-thin",
  "editor.fontFamily": "'Fira Code', 'JetBrainsMono Nerd Font', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.guides.indentation": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lightbulb.enabled": false,
  "editor.minimap.enabled": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "on",
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "cmd": "/usr/local/bin/shfmt -w ${file}",
        "isAsync": true,
        "match": "\\.(zsh|sh|zshrc|zlogin|zlogout|zshenv|zprofile)$"
      },
      {
        "cmd": "/usr/local/bin/yamllint ${file}",
        "isAsync": true,
        "match": "\\.(yaml|yml)$"
      }
    ]
  },
  "explorer.compactFolders": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.excludeGitIgnore": false,
  "files.associations": {
    "*.sql": "jinja-sql",
    ".vimrc": "vimrc",
    ".zshrc.local": "shellscript"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.pytest_cache": true,
    "**/.venv": true,
    "**/dbt_packages": true,
    "package-lock.yml": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.idea": true,
    "**/.mypy_cache": true,
    "**/.coverage": true,
    "**/*.py[co]": true,
    "**/htmlcoverage": true,
    "**/docs/build": true,
  },
  "files.hotExit": "off",
  "git.openRepositoryInParentFolders": "always",
  "github.copilot.enable": {
    "markdown": true,
    "plaintext": true
  },
  "githubPullRequests.pullBranch": "never",
  "python.defaultInterpreterPath": "/Users/ron.morgenstern/pgy-projects/task_manager_airflow/.venv",
  "python.interpreter.infoVisibility": "always",
  "redhat.telemetry.enabled": false,
  "search.exclude": {
    "**/.git": true,
    "**/.venv": true,
    "**/dbt_packages": true
  },
  "terminal.external.osxExec": "Alacritty.app",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.customGlyphs": false,
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.tabs.enabled": true,
  "window.closeWhenEmpty": true,
  "window.nativeTabs": true,
  "window.titleBarStyle": "custom",
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.iconTheme": "catppuccin-frappe",
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.tree.expandMode": "doubleClick",
  "workbench.tree.indent": 10,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.view.alwaysShowHeaderActions": true
}